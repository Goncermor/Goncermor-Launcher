        <Label Content="16ms" Margin="5,0,5,5" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" Padding="0,0,0,0" Grid.Column="2" Height="16" VerticalAlignment="Bottom"/>
        <Label Content="OverWorld" HorizontalAlignment="Left" Margin="12,0,0,13" Height="16" VerticalAlignment="Bottom" VerticalContentAlignment="Bottom" HorizontalContentAlignment="Right" Width="58" Padding="0,0,0,0" Grid.Column="1"/>
        <local:NetworkStatusDisplay Margin="0,5,5,0" HorizontalAlignment="Right" Width="30" Height="18" VerticalAlignment="Top" Grid.Column="2"/>
    </Grid>
</UserControl>
